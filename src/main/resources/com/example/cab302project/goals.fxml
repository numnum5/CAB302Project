<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302project.controller.GoalsController" style="-fx-background-color: #2c2c2c;">
    <top>
        <HBox alignment="center" spacing="10" style="-fx-padding: 10;">
            <!-- Search TextField -->
            <Button fx:id="viewGoals" onAction="#onViewGoalsButtonClick" text="View Goals" style="-fx-text-fill: black;" />
            <TextField fx:id="searchField" promptText="Search..." style="-fx-pref-width: 300px; -fx-text-fill: white; -fx-prompt-text-fill: lightgray; -fx-background-color: #333;" />
            <!-- Search Button -->
            <Button fx:id="searchButton" text="Search" style="-fx-text-fill: black;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <!-- Title Input -->
            <Label text="Goal Title:" style="-fx-padding: 0; -fx-text-fill: white;" />
            <TextField fx:id="goalTitle" promptText="Enter the title of your goal" style="-fx-pref-width: 300px; -fx-text-fill: white; -fx-prompt-text-fill: lightgray; -fx-background-color: #333;" />

            <!-- Goal Details Input -->
            <Label text="Goal Details:" style="-fx-padding: 0; -fx-text-fill: white;" />
            <TextArea fx:id="goalDetails" promptText="Enter the details of your goal" style="-fx-pref-width: 300px; -fx-pref-height: 200px; -fx-text-fill: black; -fx-prompt-text-fill: lightgray; -fx-background-color: #333;"/>

            <Button fx:id="saveButton" onAction="#onSaveButtonClick" text="Save" style="-fx-text-fill: black;" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #1f1f1f; -fx-padding: 10; -fx-pref-width: 100%;">
            <Label text="Â© 2024 CaffeinatedProgrammers"
                   style="-fx-text-fill: #888888; -fx-font-size: 14px;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Label text="Privacy Policy" style="-fx-text-fill: #4CAF50;" />
            <Label text="Terms of Service" style="-fx-text-fill: #4CAF50;" />
        </HBox>
    </bottom>
</BorderPane>
